<!-- include header -->
<% include partials/header.ejs %>
    
     <!-- display login form with login button-->
     <main class="container">
     
     <!-- if there's any message, display it -->
     <% if (messages.length > 0) { %>
        <div class="alert alert-danger"><%= messages %></div>
      <% } %>
      <h1><%= title %></h1>
      
      <!-- set the size -->
      <div class="col-sm-4">
           <form method="post">
           <div class="bg-default">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                    <input type="text" class="form-control" name="username" placeholder="Username" required autofocus/>
                 </div>
                 <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                    <input type="password" class="form-control" name="password" placeholder="Password" required/>
                </div>
                Don't have an account? <a href="/register">Register</a> now!
                <fieldset class="form-group text-right">
                    <button type="submit" class="btn btn-success" title="Login">
                    <i class="glyphicon glyphicon-log-in"></i> Login</button>
                </a>
                </fieldset>
            </div>
            </form>
         </div>
    </main>
<!-- include boot -->
<% include partials/boot.ejs %>
<!-- include footer -->
<% include partials/footer.ejs %>